<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frafrafra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodaysFixturesFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/destination_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginVertical="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:id="@+id/from_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/to_select">

                    <TextView
                        android:id="@+id/from_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/from_drop_down_text" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/bus_stops"
                        android:paddingVertical="@dimen/default_padding" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/to_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toRightOf="@id/from_select"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:id="@+id/return_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/to_drop_down_text" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/bus_stops"
                        android:paddingVertical="@dimen/default_padding" />
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/date_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/default_padding"
                app:layout_constraintTop_toBottomOf="@id/destination_select">

                <LinearLayout
                    android:id="@+id/depart_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                    android:orientation="vertical"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/arrive_select">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/depart_date_text" />

                    <TextView
                        android:id="@+id/return_textedit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="100dp"
                        android:background="@drawable/rectangle_background"
                        android:onClick="datePickerOnClick"
                        android:padding="@dimen/default_padding" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/arrive_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toRightOf="@id/depart_select"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/return_date_text" />

                    <TextView
                        android:id="@+id/departure_textedit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="100dp"
                        android:background="@drawable/rectangle_background"
                        android:fadingEdge="none"
                        android:onClick="datePickerOnClick"
                        android:padding="@dimen/default_padding" />
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/passenger_count_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginVertical="@dimen/activity_vertical_margin"
                android:background="@drawable/rectangle_background"
                android:padding="@dimen/default_padding"
                android:text="1 adult" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginVertical="@dimen/activity_vertical_margin"
                android:text="Search" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>